<section class="section">
  <header>
    <h2 class='section-title'>References</h2>
  </header>
  <section id="references">

    {{#each references}}

    <div class="item">
      <blockquote class="reference">
        &#8220;&#32;
        {{ reference }}
        &#32;&#8221;
      </blockquote>
      <div class="name">
         {{ name }}
      </div>
    </div>

    {{/each}}
  </section>
</section>